{
  "name": "root",
  "author": "Orie Steele (https://github.com/OR13)",
  "contributors": ["Orie Steele (https://github.com/OR13)", "gjgd (https://github.com/gjgd)"],
  "private": true,
  "license": "https://www.w3.org/Consortium/Legal/2015/copyright-software-and-document",
  "scripts": {
    "postinstall": "lerna bootstrap",
    "lint": "lerna run lint --stream",
    "test": "lerna run test --stream",
    "build": "lerna run build --stream",
    "install:ci": "npm install --ignore-scripts && lerna link && lerna bootstrap --since origin/master --include-dependencies",
    "publish:stable:patch": "lerna version patch",
    "publish:stable:minor": "lerna version minor",
    "publish:stable:major": "lerna version major",
    "publish:unstable": "lerna version prerelease --preid unstable --yes",
    "generate:fixtures": "lerna run generate:fixtures --since origin/master --include-dependencies"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-push": "lerna run lint --since origin/master --exclude-dependents"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^9.0.1",
    "@commitlint/config-conventional": "^9.0.1",
    "@types/jest": "^25.2.3",
    "@typescript-eslint/eslint-plugin": "^3.1.0",
    "@typescript-eslint/parser": "^3.1.0",
    "eslint": "^7.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-jest": "^23.13.2",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "lerna": "^3.20.2",
    "prettier": "^2.0.5",
    "typescript": "^3.8.3"
  }
}
