{
  "name": "root",
  "private": true,
  "scripts": {
    "install:ci": "npm install --ignore-scripts",
    "postinstall:ci": "lerna bootstrap --since origin/master ----include-dependents",
    "postinstall": "lerna bootstrap",
    "lint": "lerna run lint --stream",
    "test": "lerna run test --stream --concurrency 1 --since origin/master",
    "build": "lerna run build --stream"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lerna run lint --since HEAD"
    }
  },
  "devDependencies": {
    "husky": "^4.2.5",
    "lerna": "^3.20.2"
  }
}
